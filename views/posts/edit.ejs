<%- include "../partials/header" %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= post.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= post.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= posts.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= post.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>
    </div>
<%- include "../partials/footer" %>

